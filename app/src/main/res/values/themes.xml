<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
      The base application theme. This theme is a transparent starting point
      for our Jetpack Compose UI, allowing AuraTrackrTheme to control all colors
      and styles for a true edge-to-edge experience.
    -->
    <style name="Theme.AuraTrackr" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- A specific theme for the transparent BlockingActivity overlay -->
    <style name="Theme.AuraTrackr.Transparent" parent="Theme.AuraTrackr">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
